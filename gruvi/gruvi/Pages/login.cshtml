@page
@model gruvi.Pages.login
@{
    ViewData["Title"] = "Iniciar Sesión";
}

<section class="container mt-5">
    <h2 class="text-center">Inicia sesión en tu cuenta</h2>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger text-center">@Model.ErrorMessage</div>
    }

    <form method="post">
        <div class="mb-3">
            <label asp-for="Input.Email" class="form-label">Correo</label>
            <input asp-for="Input.Email" class="form-control" placeholder="example@gmail.com">
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.Password" class="form-label">Contraseña</label>
            <input asp-for="Input.Password" type="password" class="form-control" placeholder="********">
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="text-center">
            <a asp-page="/Recuperacion" class="forgot-password-link">¿Olvidaste tu contraseña?</a>
        </div>

        <button type="submit" class="btn btn-primary w-100 mt-3">Iniciar Sesión</button>

        <p class="text-center mt-3">
            ¿No tienes una cuenta?
            <a asp-page="/Registro">Crear Sesión</a>
        </p>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
